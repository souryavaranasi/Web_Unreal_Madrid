<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font: 13px Helvetica, Arial;
    }

    .msgDiv {
        border: 1px solid black;
        padding: 3px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .msgDiv input {
        border: 0;
        padding: 10px;
        width: 90%;
        margin-right: .5%;
    }

    .msgDiv button {
        width: 9%;
        background: rgb(130, 224, 255);
        border: none;
        padding: 10px;
    }

    #messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    #messages li {
        padding: 5px 10px;
    }

    #messages li:nth-child(odd) {
        background: #eee;
    }

    .top_clear {
        position: fixed;
        top: 20vh;
        width: 100%;
    }

    .header {
        text-align: center;
    }

    .text-center {
        text-align: center;
    }
